<style>
/* Remove duplicate root variables since they're already in main.css */

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 var(--space-4);
}

/* Hero Section */
.services-hero {
  padding: calc(80px + var(--space-20)) 0 var(--space-20);
  background: linear-gradient(135deg, #4c63d2 0%, #5b2c87 100%);
  color: #ffffff;
  text-align: center;
}

[data-theme="dark"] .services-hero {
  background: linear-gradient(135deg, #3730a3 0%, #4c1d95 100%);
}

.hero-title {
  font-size: clamp(var(--text-3xl), 5vw, var(--text-5xl));
  font-weight: 800;
  margin-bottom: var(--space-6);
  line-height: 1.1;
  color: #ffffff;
}

.hero-title em {
  font-style: normal;
  background: linear-gradient(45deg, #ffd700, #ffed4e);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.hero-description {
  font-size: var(--text-xl);
  line-height: 1.6;
  margin-bottom: var(--space-4);
  max-width: 900px;
  margin-left: auto;
  margin-right: auto;
  color: #ffffff;
}

.hero-subtext {
  font-size: var(--text-lg);
  line-height: 1.6;
  margin-bottom: var(--space-8);
  opacity: 0.95;
  max-width: 800px;
  margin-left: auto;
  margin-right: auto;
  color: #ffffff;
}

/* Button styles are now in main.css */

/* Section Styles */
.section-title {
  font-size: clamp(var(--text-2xl), 4vw, var(--text-4xl));
  font-weight: 700;
  text-align: center;
  margin-bottom: var(--space-8);
  color: var(--color-primary);
}

.section-description {
  text-align: center;
  font-size: var(--text-lg);
  color: var(--color-secondary);
  margin-bottom: var(--space-8);
  max-width: 700px;
  margin-left: auto;
  margin-right: auto;
}

/* Why Astro Section */
.why-astro {
  padding: var(--space-20) 0;
  background: var(--color-white);
}

[data-theme="dark"] .why-astro {
  background: var(--color-white);
}

.benefits-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: var(--space-6);
}

.benefit-card {
  text-align: center;
  padding: var(--space-6);
  border-radius: var(--radius-lg);
  background: var(--color-light-gray);
  transition: var(--transition);
}

[data-theme="dark"] .benefit-card {
  background: var(--color-light-gray);
  border: 1px solid var(--color-border);
}

.benefit-card:hover {
  transform: translateY(-5px);
  box-shadow: var(--shadow-lg);
}

.benefit-icon {
  font-size: var(--text-4xl);
  margin-bottom: var(--space-4);
}

.benefit-card h3 {
  font-size: var(--text-xl);
  margin-bottom: var(--space-3);
  color: var(--color-primary);
}

.benefit-card p {
  color: var(--color-secondary);
  line-height: 1.6;
}

/* Our Services Section */
.our-services {
  padding: var(--space-20) 0;
  background: var(--color-light-gray);
}

[data-theme="dark"] .our-services {
  background: var(--color-light-gray);
}

.services-list {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: var(--space-6);
}

.service-item {
  background: var(--color-white);
  padding: var(--space-6);
  border-radius: var(--radius-lg);
  border-left: 4px solid var(--color-accent);
  box-shadow: var(--shadow-sm);
  transition: var(--transition);
}

[data-theme="dark"] .service-item {
  background: var(--color-white);
  border: 1px solid var(--color-border);
}

.service-item:hover {
  box-shadow: var(--shadow-lg);
  transform: translateX(5px);
}

.service-item h3 {
  color: var(--color-primary);
  margin-bottom: var(--space-3);
  font-size: var(--text-xl);
}

.service-item p {
  color: var(--color-secondary);
  line-height: 1.6;
}

/* Who Needs Section */
.who-needs {
  padding: var(--space-20) 0;
  background: var(--color-white);
}

[data-theme="dark"] .who-needs {
  background: var(--color-white);
}

.target-audience {
  max-width: 700px;
  margin: 0 auto;
}

.audience-item {
  display: flex;
  align-items: center;
  gap: var(--space-4);
  margin-bottom: var(--space-4);
  padding: var(--space-4);
  background: var(--color-light-gray);
  border-radius: var(--radius-lg);
  transition: var(--transition);
}

[data-theme="dark"] .audience-item {
  background: var(--color-light-gray);
  border: 1px solid var(--color-border);
}

.audience-item:hover {
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(139, 92, 246, 0.1) 100%);
  transform: translateX(10px);
}

.check-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 30px;
  height: 30px;
  background: var(--color-accent);
  color: #ffffff;
  border-radius: 50%;
  flex-shrink: 0;
  font-weight: bold;
}

.audience-item p {
  margin: 0;
  font-size: var(--text-lg);
  color: var(--color-primary);
}

/* Case Study Section */
.case-study {
  padding: var(--space-20) 0;
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.05) 0%, rgba(139, 92, 246, 0.05) 100%);
}

.case-study-content {
  max-width: 900px;
  margin: 0 auto;
}

.case-intro {
  text-align: center;
  font-size: var(--text-xl);
  color: var(--color-secondary);
  margin-bottom: var(--space-8);
}

.results-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: var(--space-6);
}

.result-item {
  text-align: center;
  padding: var(--space-6);
  background: var(--color-white);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
}

[data-theme="dark"] .result-item {
  background: var(--color-white);
  border: 1px solid var(--color-border);
}

.result-metric {
  font-size: var(--text-3xl);
  font-weight: 800;
  color: var(--color-accent);
  margin-bottom: var(--space-2);
}

.result-label {
  font-size: var(--text-base);
  color: var(--color-secondary);
}

/* Why Us Section */
.why-us {
  padding: var(--space-20) 0;
  background: var(--color-white);
}

[data-theme="dark"] .why-us {
  background: var(--color-white);
}

.reasons-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: var(--space-6);
  max-width: 900px;
  margin: 0 auto;
}

.reason-card {
  display: flex;
  align-items: center;
  gap: var(--space-4);
  padding: var(--space-4);
  background: var(--color-light-gray);
  border-radius: var(--radius-lg);
  transition: var(--transition);
}

[data-theme="dark"] .reason-card {
  background: var(--color-light-gray);
  border: 1px solid var(--color-border);
}

.reason-card:hover {
  transform: translateY(-3px);
  box-shadow: var(--shadow-md);
}

.reason-icon {
  font-size: var(--text-2xl);
  flex-shrink: 0;
}

.reason-card p {
  margin: 0;
  color: var(--color-primary);
  font-weight: 500;
}

/* CTA Section */
.cta-section {
  padding: var(--space-20) 0;
  background: #1a1a2e;
  color: #ffffff;
  text-align: center;
}

[data-theme="dark"] .cta-section {
  background: #0f172a;
  color: #ffffff;
}

.cta-title {
  font-size: clamp(var(--text-2xl), 4vw, var(--text-4xl));
  font-weight: 700;
  margin-bottom: var(--space-4);
  color: #ffffff;
}

.cta-description {
  font-size: var(--text-xl);
  margin-bottom: var(--space-4);
  opacity: 0.95;
  color: #ffffff;
}

.cta-text {
  font-size: var(--text-lg);
  margin-bottom: var(--space-8);
  opacity: 0.9;
  color: #ffffff;
}

/* Ensure text colors work in dark mode */
[data-theme="dark"] .benefit-card h3,
[data-theme="dark"] .service-item h3,
[data-theme="dark"] .audience-item p,
[data-theme="dark"] .reason-card p {
  color: var(--color-primary);
}

[data-theme="dark"] .benefit-card p,
[data-theme="dark"] .service-item p,
[data-theme="dark"] .case-intro,
[data-theme="dark"] .result-label {
  color: var(--color-secondary);
}

/* Responsive Design */
@media (max-width: 768px) {
  .services-list {
    grid-template-columns: 1fr;
  }
  
  .results-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .reasons-grid {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 480px) {
  .benefits-grid {
    grid-template-columns: 1fr;
  }
  
  .results-grid {
    grid-template-columns: 1fr;
  }
}
</style>