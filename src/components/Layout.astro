---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="We build high-performing static websites that convert visitors into customers." />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="dns-prefetch" href="https://fonts.googleapis.com" />
    <link rel="dns-prefetch" href="https://fonts.gstatic.com" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" onload="this.onload=null;this.rel='stylesheet'" />
    <noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" /></noscript>
    <link rel="preload" href="/styles/main.css" as="style" />
    <link rel="stylesheet" href="/styles/main.css" />
    <title>{title}</title>
  </head>
  <body>
    <header class="header">
      <div class="container">
        <nav class="nav">
          <div class="nav-brand">
            <a href="/" aria-label="Home">
              <img src="/images/logo.svg" alt="StaticPages" class="brand-logo" decoding="async" fetchpriority="high" />
            </a>
          </div>
          <div class="nav-menu">
            <a href="#services" class="nav-link">Services</a>
            <a href="#work" class="nav-link">Work</a>
            <a href="#blog" class="nav-link">Blog</a>
            <a href="#about" class="nav-link">About</a>
            <a href="#contact" class="nav-link nav-cta">Get Started</a>
          </div>
          <div class="nav-actions">
            <button class="theme-toggle" id="themeToggle" aria-label="Toggle theme">
              <span class="toggle-icon" aria-hidden="true">
                <svg class="icon-sun" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="12" r="4" />
                  <path d="M12 2v2M12 20v2M4.93 4.93l1.41 1.41M17.66 17.66l1.41 1.41M2 12h2M20 12h2M4.93 19.07l1.41-1.41M17.66 6.34l1.41-1.41" />
                </svg>
                <svg class="icon-moon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M21 12.79A9 9 0 1111.21 3 7 7 0 0021 12.79z" />
                </svg>
              </span>
            </button>
            <button class="nav-toggle" id="navToggle">
              <span></span>
              <span></span>
              <span></span>
            </button>
          </div>
        </nav>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer class="footer">
      <div class="container">
        <div class="footer-content">
          <div class="footer-brand">
            <a href="/" aria-label="Home" class="footer-logo-link">
              <img src="/images/logo.svg" alt="StaticPages" class="brand-logo" loading="lazy" decoding="async" fetchpriority="low" />
            </a>
            <p>High-performing static sites that convert</p>
          </div>
          <div class="footer-links">
            <div class="link-group">
              <h4>Services</h4>
              <a href="#services">Static Site Generation</a>
              <a href="#services">Performance Optimization</a>
              <a href="#services">Conversion Optimization</a>
            </div>
            <div class="link-group">
              <h4>Company</h4>
              <a href="#about">About</a>
              <a href="#work">Case Studies</a>
              <a href="#contact">Contact</a>
            </div>
            <div class="link-group">
              <h4>Resources</h4>
              <a href="/blog">Blog</a>
              <a href="/blog/cdn">CDN Guide</a>
              <a href="/blog/jamstack">JAMstack</a>
              <a href="/blog/core-web-vitals">Core Web Vitals</a>
            </div>
          </div>
        </div>
        <div class="footer-bottom">
          <p>&copy; 2024 StaticPages. All rights reserved.</p>
          <div class="footer-social">
            <a href="#" aria-label="Twitter">Twitter</a>
            <a href="#" aria-label="LinkedIn">LinkedIn</a>
            <a href="#" aria-label="GitHub">GitHub</a>
          </div>
        </div>
      </div>
    </footer>

    <script src="/scripts/main.js" is:inline></script>
  </body>
</html>